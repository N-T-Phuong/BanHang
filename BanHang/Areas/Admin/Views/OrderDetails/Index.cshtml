@model IEnumerable<BanHang.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            Địa chỉ giao hàng
        </th>
        <th>
            Tên Sản phẩm
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Tổng tiền
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Order.Note)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.NameProduct)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalOrder)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdOrderDetail }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdOrderDetail }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdOrderDetail })
        </td>
    </tr>
}

</table>
