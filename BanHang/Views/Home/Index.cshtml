<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4 mt-5" style=" text-align: center;">
            <div class="card">
                <h2> @Html.DisplayFor(modelItem => item.NameProduct)</h2>
                <img src="~/Content/image/@Html.DisplayFor(modelItem => item.Image)" alt="" style="margin:auto;" height="270" width="270" />
                <br />
                <span style="font-weight:bold; color:navy;">@Html.DisplayFor(modelItem => item.UnitPrice).00</span>
                <a href="/ShoppingCart/AddtoCart/@item.IdProduct">
                    <img src="@Url.Content("~/Content/image/cart.png")" alt="" height="25" />
                </a>
                <a class=" btn btn-info btn-sm " href="@Url.Action("Details", "Products", new { id = item.IdProduct })"> Xem chi tiết</a>
            </div>
        </div>
    }
</div>